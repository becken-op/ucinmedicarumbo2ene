                <div class="oe_structure"/>

                <p t-field="doc.note" />
                <p t-if="doc.payment_term_id.note">
                    <span t-field="doc.payment_term_id.note"/>
                </p>
                <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.sudo().note">
                    <strong>Fiscal Position Remark:</strong>
                    <span t-field="doc.fiscal_position_id.sudo().note"/>
                </p>

                <br/>
                <t t-if="doc.has_line_backorder">
                    <h2 class="mt16">
                        BACK ORDER
                    </h2>
                    <div class="row mt32 mb32" id="informations_backorder">
                        <div t-if="doc.sale_order_backorder_reason_id" class="col-auto col-12 mw-100 mb-2">
                            <strong>Reason:</strong>
                            <p class="m-0" t-field="doc.sale_order_backorder_reason_id"/>
                        </div>
                    </div>
                    <table class="table table-sm o_main_table">
                        <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                        <thead style="display: table-row-group">
                            <tr>
                                <th name="th_description" class="text-left">Description</th>
                                <th name="th_quantity" class="text-right">Quantity</th>
                                <th name="th_backorder_date" class="text-right">Date</th>

                                <th name="th_priceunit" class="text-right">Unit Price</th>
                                <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                    <span>Disc.%</span>
                                </th>
                                <th name="th_taxes" class="text-right">Taxes</th>
                                <th name="th_subtotal" class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="subtotal" t-value="0"/>
                            <t t-set="price_tax" t-value="0"/>

                            <t t-foreach="doc.order_line" t-as="line">
                                <t t-if="line.qty_backorder > 0.00">
                                <t t-set="price"  t-value="line.price_unit * (1 - (line.discount or 0.0) / 100.0)"/>
                                    <t t-set="subtotal" t-value="subtotal + line.qty_backorder * price"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.qty_backorder * price" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.qty_backorder * price" groups="account.group_show_line_subtotals_tax_included"/>
                                    <t t-set="taxes" t-value="line.tax_id.compute_all(price, line.order_id.currency_id, line.qty_backorder, product=line.product_id, partner=line.order_id.partner_shipping_id)"/>
                                    <t t-set="price_tax" t-value="price_tax + sum(t.get('amount', 0.0) for t in taxes.get('taxes', []))"/>
                                    <t t-set="backorder_move_ids" t-value="line.move_ids.filtered(lambda r: r.state != 'cancel' and r.backorder_id != False)"/>

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <td name="td_name"><span t-field="line.name"/></td>
                                        <td name="td_quantity" class="text-right">
                                            <span t-esc="'%.0f' % line.qty_backorder"/>
                                            <span t-field="line.product_uom"/>
                                        </td>
                                        <td name="td_backorder_date" class="text-right">
                                            <span t-if="backorder_move_ids" t-esc="backorder_move_ids[0].date" t-options='{"widget": "date"}'/>
                                        </td>
                                        <td name="td_priceunit" class="text-right">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td name="td_taxes" class="text-right">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                        </td>
                                        <td name="td_subtotal" class="text-right o_price_total">
                                            <span t-esc="line.price_subtotal/line.product_uom_qty*(line.qty_backorder)"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}' groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-esc="line.price_total/line.product_uom_qty*(line.qty_backorder)"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}' groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td name="td_section_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td name="td_note_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td name="td_section_subtotal" colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix" name="so_total_summary">
                        <div id="total" class="row" name="total">
                            <div t-attf-class="#{'col-3' if report_type != 'html' else 'col-sm-3 col-md-3'} ml-auto">
                                <table class="table table-sm">
                                    <tr class="border-black o_subtotal" style="">
                                        <td name="td_amount_untaxed_label"><strong>Subtotal</strong></td>
                                        <td name="td_amount_untaxed" class="text-right">
                                            <span t-esc="subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr class="border-black o_total">
                                        <td name="td_amount_total_label"><strong>Taxes</strong></td>
                                        <td name="td_amount_total" class="text-right">
                                            <span t-esc="price_tax"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr class="border-black o_total">
                                        <td name="td_amount_total_label"><strong>Total</strong></td>
                                        <td name="td_amount_total" class="text-right">
                                            <span t-esc="subtotal + price_tax"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>

                <br/>
                <t t-if="doc.has_line_cancelled">
                    <h2 class="mt16">
                        CANCELADO
                    </h2>
                    <div class="row mt32 mb32" id="informations_cancelled">
                        <div t-if="doc.sale_order_cancellation_reason_id" class="col-auto col-12 mw-100 mb-2">
                            <strong>Reason:</strong>
                            <p class="m-0" t-field="doc.sale_order_cancellation_reason_id"/>
                        </div>
                    </div>
                    <table class="table table-sm o_main_table">
                        <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                        <thead style="display: table-row-group">
                            <tr>
                                <th name="th_description" class="text-left">Description</th>
                                <th name="th_quantity" class="text-right">Quantity</th>

                                <th name="th_priceunit" class="text-right">Unit Price</th>
                                <th name="th_discount" t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                    <span>Disc.%</span>
                                </th>
                                <th name="th_taxes" class="text-right">Taxes</th>
                                <th name="th_subtotal" class="text-right">
                                    <span groups="account.group_show_line_subtotals_tax_excluded">Amount</span>
                                    <span groups="account.group_show_line_subtotals_tax_included">Total Price</span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0"/>
                            <t t-set="subtotal" t-value="0"/>
                            <t t-set="price_tax" t-value="0"/>

                            <t t-foreach="doc.order_line" t-as="line">
                                <t t-if="line.qty_cancelled > 0.00">
                                    <t t-set="price"  t-value="line.price_unit * (1 - (line.discount or 0.0) / 100.0)"/>
                                    <t t-set="subtotal" t-value="subtotal + line.qty_cancelled * price"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.qty_cancelled * price" groups="account.group_show_line_subtotals_tax_excluded"/>
                                    <t t-set="current_subtotal" t-value="current_subtotal + line.qty_cancelled * price" groups="account.group_show_line_subtotals_tax_included"/>
                                    <t t-set="taxes" t-value="line.tax_id.compute_all(price, line.order_id.currency_id, line.qty_cancelled, product=line.product_id, partner=line.order_id.partner_shipping_id)"/>
                                    <t t-set="price_tax" t-value="price_tax + sum(t.get('amount', 0.0) for t in taxes.get('taxes', []))"/>

                                    <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                        <td name="td_name"><span t-field="line.name"/></td>
                                        <td name="td_quantity" class="text-right">
                                            <span t-esc="'%.0f' % line.qty_cancelled"/>
                                            <span t-field="line.product_uom"/>
                                        </td>
                                        <td name="td_priceunit" class="text-right">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td name="td_taxes" class="text-right">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), line.tax_id))"/>
                                        </td>
                                        <td name="td_subtotal" class="text-right o_price_total">
                                            <span t-esc="line.qty_cancelled * price"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}' groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-esc="line.qty_cancelled * price"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}' groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td name="td_section_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                            <t t-set="current_section" t-value="line"/>
                                            <t t-set="current_subtotal" t-value="0"/>
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td name="td_note_line" colspan="99">
                                                <span t-field="line.name"/>
                                            </td>
                                        </t>
                                    </tr>

                                    <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                        <tr class="is-subtotal text-right">
                                            <td name="td_section_subtotal" colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix" name="so_total_summary">
                        <div id="total" class="row" name="total">
                            <div t-attf-class="#{'col-3' if report_type != 'html' else 'col-sm-3 col-md-3'} ml-auto">
                                <table class="table table-sm">
                                    <tr class="border-black o_subtotal" style="">
                                        <td name="td_amount_untaxed_label"><strong>Subtotal</strong></td>
                                        <td name="td_amount_untaxed" class="text-right">
                                            <span t-esc="subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr class="border-black o_total">
                                        <td name="td_amount_total_label"><strong>Taxes</strong></td>
                                        <td name="td_amount_total" class="text-right">
                                            <span t-esc="price_tax"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </tr>
                                    <tr class="border-black o_total">
                                        <td name="td_amount_total_label"><strong>Total</strong></td>
                                        <td name="td_amount_total" class="text-right">
                                            <span t-esc="subtotal + price_tax"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
            </div>
        </t>
    </template>

    <template id="report_ticket_saleorder">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="sale_stock_backorder_oin.report_ticket_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>