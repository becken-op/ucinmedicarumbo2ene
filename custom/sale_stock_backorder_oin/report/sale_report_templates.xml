                <h2 class="mt16">
                    <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                        <t t-if="doc.order_type_id">
                            <span><span t-esc="doc.order_type_id.name.split('/')[0]"/> # </span>
                        </t>
                        <t t-else="">
                            <span t-if="doc.state not in ['draft','sent']">Order # </span>
                            <span t-if="doc.state in ['draft','sent']">Quotation # </span>
                        </t>
                    </t>
                    <t t-if="env.context.get('proforma', False) or is_pro_forma">
                        <span>Pro-Forma Invoice # </span>
                    </t>
                    <span t-field="doc.name"/>
                </h2>

                <table class="table table-sm o_main_table">
                    <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                    <thead style="display: table-row-group">
                        <tr>
                            <th name="th_tipo" t-if="doc.order_type_id" class="text-left">
                                Tipo:
                            </th>
                            <th name="th_order_date" t-if="doc.date_order and doc.state not in ['draft','sent']" class="text-left">
                                Order Date:
                            </th>
                            <th name="th_quotation_date" t-if="doc.date_order and doc.state in ['draft','sent']" class="text-left">
                                Quotation Date:
                            </th>
                            <th name="th_expiration" t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="text-left">
                                Expiration:
                            </th>
                            <th name="th_salesperson" t-if="doc.user_id.name" class="text-left">
                                Salesperson:
                            </th>
                            <th name="th_reference" t-if="doc.client_order_ref" class="text-left">
                                Your Reference:
                            </th>
                            <th name="th_ticket" t-if="doc.ticket_number" class="text-left">
                                Ticket:
                            </th>
                        </tr>
                    </thead>
                    <tbody class="sale_tbody">
                        <tr>
                            <td name="td_tipo" t-if="doc.order_type_id" class="text-left">
                                <span t-field="doc.order_type_id"/>
                            </td>
                             <td name="td_tipo" t-if="doc.date_order and doc.state not in ['draft','sent']" class="text-left">
                                <span t-field="doc.date_order" t-options='{"widget": "date"}'/>
                            </td>
                            <td name="td_tipo" t-if="doc.date_order and doc.state in ['draft','sent']" class="text-left">
                                <span t-field="doc.date_order" t-options='{"widget": "date"}'/>
                            </td>
                            <td name="td_tipo" t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="text-left">
                                <span t-field="doc.validity_date"/>
                            </td>
                            <td name="td_tipo" t-if="doc.user_id.name" class="text-left">
                                <span t-field="doc.user_id"/>
                            </td>
                            <td name="td_tipo" t-if="doc.client_order_ref" class="text-left">
                                <span t-field="doc.client_order_ref"/>
                            </td>
                            <td name="td_tipo" t-if="doc.ticket_number" class="text-left">
                                <span t-field="doc.ticket_number"/>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <br/>

