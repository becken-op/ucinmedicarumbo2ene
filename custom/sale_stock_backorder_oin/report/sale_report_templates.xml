            <div class="page" style="font-size:71%; line-height: 130%;">
                <div class="oe_structure"/>
                <div t-field="doc.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}' />
                <p t-if="doc.partner_id.vat"><t t-esc="doc.company_id.country_id.vat_label or 'Tax ID'"/>: <span t-field="doc.partner_id.vat"/></p>
                <!-- <b><span style="text-transform: uppercase;" t-field="doc.partner_id.commercial_partner_id"/></b><br/>
                <b><span style="text-transform: uppercase;" t-if="doc.partner_id.title" t-esc="doc.partner_id.title.name + ' '"/><span t-esc="doc.partner_id.name"/></b><br/>
