        </xpath>

        <xpath expr="//div[@name='reference']" position="attributes">
            <attribute name="class">col-xs-3 mw-100 mb-2</attribute>
        </xpath>

        <!-- Modificar el tamaño de la fuente del comentario -->
        <xpath expr="//p[@t-if='o.narration']" position="attributes">
